<body>
  <h2>üèÅ Marble Race Mini</h2>
  <div class="track" id="track">
    <div class="marble" id="red" style="background: red; top: 10px;"></div>
    <div class="marble" id="blue" style="background: blue; top: 60px;"></div>
    <div class="marble" id="green" style="background: green; top: 110px;"></div>
  </div>

  <div id="controls">
    <button id="start">Mulai Balapan</button>
  </div>

  <h3 id="result"></h3>

  <script>
    const marbles = [
      { id: 'red', name: 'Merah' },
      { id: 'blue', name: 'Biru' },
      { id: 'green', name: 'Hijau' }
    ];

    document.getElementById('start').addEventListener('click', () => {
      const resultText = document.getElementById('result');
      resultText.textContent = '';

      // Reset posisi
      marbles.forEach(m => {
        const el = document.getElementById(m.id);
        el.style.left = '0px';
      });

      // Animasi balapan
      marbles.forEach(m => {
        const el = document.getElementById(m.id);
        const distance = Math.random() * 240 + 30; // acak jarak
        el.style.left = distance + 'px';
      });

      // Tentukan pemenang
      const winner = marbles[Math.floor(Math.random() * marbles.length)];
      setTimeout(() => {
        resultText.textContent = `üéâ Kelereng ${winner.name} menang!`;
      }, 2500);
    });
  </script>
